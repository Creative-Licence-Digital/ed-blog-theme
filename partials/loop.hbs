{{!-- Previous/next page links - only displayed on page 2+ --}}
<div class="extra-pagination inner">
  {{pagination}}
</div>

<div class="row">
{{!-- This is the post loop - each post will be output using this markup --}}
{{#foreach posts}}
  {{#is "home"}}
  {{#if @first}}
    <div class="col-sm-12">
      <article class="{{post_class}} featured">
  {{else}}
    <div class="col-md-4 col-sm-6">
      <article class="{{post_class}}">
  {{/if}}
  {{else}}
    <div class="col-sm-6 col-md-5 {{#if @odd}}col-md-offset-1{{/if}}">
      <article class="{{post_class}}">
  {{/is}}
      <header class="post-header">
        {{#if image}}
          <a href="{{url}}">
            <figure class="post-image">
              <img src="{{image}}" width="100%" />
            </figure>
          </a>
        {{/if}}
        <h2 class="post-title">
          <a href="{{url}}">{{title}}</a>
        </h2>
        <section class="post-excerpt">
          <p>
            {{excerpt words="20"}}...
            <a class="read-more text-uppercase text-sm text-bold"
               href="{{url}}">
              Read More
            </a>
          </p>
        </section>
      </header>
      <footer class="post-meta">
        {{#if author.image}}
          <img class="author-thumb"
               src="{{author.image}}"
               alt="{{author.name}}"
               nopin="nopin" />
        {{/if}}
        {{author}}{{tags prefix=" in "}}
        <br>
        <time class="post-date" datetime="{{date format="YYYY-MM-DD"}}">
          {{date format="MMM D, YYYY"}}
        </time>
      </footer>
    </article>
  </div>
{{/foreach}}
</div>

{{!-- Previous/next page links - displayed on every page --}}
{{pagination}}
